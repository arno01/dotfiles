[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[push]
	default = upstream
[color]
	ui = true
	branch = true
	diff = true
	interactive = true
	status = true
[branch]
	autosetuprebase = always
[core]
	excludesfile = ~/.gitignore
	precomposeunicode = true
[alias]
	co = checkout
	pr = pull --rebase
	pu = push
	cm = commit -v
	lb = !git branch --color --sort=-committerdate | head -n 5
	lrb = !git branch --remote --color --sort=-committerdate | head -n 5
	pufwl = push --force-with-lease
